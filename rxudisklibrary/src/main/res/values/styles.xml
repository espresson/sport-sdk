<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="udisk_button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/dp_10</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="disk_v_button">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingTop">@dimen/dp_5</item>
        <item name="android:layout_marginRight">@dimen/dp_1</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@color/bg117E8f</item>
        <item name="android:textSize">@dimen/dp_10</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?attr/buttonTextStyle</item>
    </style>

    <style name="disk_h_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/dp_10</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="tv_file_item">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">left</item>
        <item name="android:layout_marginLeft">@dimen/dp_10</item>
    </style>

    <style name="tv_file_item_name" parent="tv_file_item">
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
        <item name="android:textSize">@dimen/dp_10</item>
        <item name="android:lines">1</item>
    </style>

    <style name="tv_file_item_small" parent="tv_file_item">
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:textSize">@dimen/dp_8</item>
        <item name="android:lines">1</item>
    </style>

    <style name="item_iv">
        <item name="android:layout_width">@dimen/dp_30</item>
        <item name="android:layout_height">@dimen/dp_30</item>
        <item name="android:layout_margin">@dimen/dp_2</item>
    </style>

    <style name="Fullscreen">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:background">@android:color/white</item>
    </style>

    <style name="StyleRed" parent="Fullscreen">
        <item name="styleColor">@color/bg_red</item>
        <item name="buttonStyle">@drawable/btn_drawable_red_gray</item>
        <item name="buttonTextStyle">@drawable/text_color_white_red_selector</item>
    </style>

    <style name="StyleGreen" parent="Fullscreen">
        <item name="styleColor">@color/bg_green</item>
        <item name="buttonStyle">@drawable/btn_drawable_green_gray</item>
        <item name="buttonTextStyle">@drawable/text_color_white_green_selector</item>
    </style>

    <style name="StyleBlue" parent="Fullscreen">
        <item name="styleColor">@color/bg_blue</item>
        <item name="buttonStyle">@drawable/btn_drawable_blue_gray</item>
        <item name="buttonTextStyle">@drawable/text_color_white_blue_selector</item>
    </style>

    <style name="StyleArmy" parent="Fullscreen">
        <item name="styleColor">@color/bg_army</item>
        <item name="buttonStyle">@drawable/btn_drawable_army_gray</item>
        <item name="buttonTextStyle">@drawable/text_color_white_army_selector</item>
    </style>

</resources>
